# LiteLLM Gateway — Environment Variables
# Copy to: rtgf-ai-stack/gateway/.env (never commit the real .env)
# Used by: compose/gateway.yml

# ─── Required ────────────────────────────────────────────────────────────────

# Master key for LiteLLM admin API and UI
# Generate: openssl rand -hex 32
LITELLM_MASTER_KEY=sk-master-change-me

# Database for spend tracking and virtual key storage
# PostgreSQL (compose/gateway.yml starts this for you)
DATABASE_URL=postgresql://litellm:litellm@db:5432/litellm

# ─── Ollama ──────────────────────────────────────────────────────────────────

# Ollama API base URL (from Docker container perspective)
# host.docker.internal resolves to Windows host from Docker on Windows/WSL2
OLLAMA_API_BASE=http://host.docker.internal:11434

# ─── Cloud Providers (set only what you have) ─────────────────────────────────

# Anthropic Claude API key
# Get: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API key (optional)
# Get: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# ─── PostgreSQL (internal — matches DATABASE_URL above) ──────────────────────

POSTGRES_USER=litellm
POSTGRES_PASSWORD=litellm
POSTGRES_DB=litellm
